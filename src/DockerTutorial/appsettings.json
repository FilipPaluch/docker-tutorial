{
  "Serilog": {
    "Using": [ "Serilog.Sinks.ColoredConsole" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Environment": "Dev",
      "ComponentName": "DockerTutorialAPI"
    },
    "WriteTo": [
      { "Name": "ColoredConsole" }
    ]
  },

  "Database": {
    "ConnectionString": "host=docker-tutorial-db;port=5432;database=tutorial;password=password;username=postgres"
  }

}